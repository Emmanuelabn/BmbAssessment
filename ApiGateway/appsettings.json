{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/apigateway-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "products_route": {
        "ClusterId": "products_cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "orders_route": {
        "ClusterId": "orders_cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "products_cluster": {
        "Destinations": {
          "products_destination": {
            "Address": "http://localhost:5201/"
          }
        }
      },
      "orders_cluster": {
        "Destinations": {
          "orders_destination": {
            "Address": "http://localhost:5021/"
          }
        }
      }
    }
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowSeconds": 60
  },
  "AllowedHosts": "*"
}
