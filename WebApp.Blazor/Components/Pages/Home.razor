@page "/dashboard"
@rendermode InteractiveServer
@using WebApp.Blazor.Services
@inject ApiGatewayClient Api
@inject NavigationManager Nav

<PageTitle>Dashboard</PageTitle>

<div class="container my-4">
    <!-- Hero -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="p-4 bg-light rounded-3 shadow-sm">
                <h1 class="display-5 mb-2">Order Management Portal</h1>
                <p class="lead mb-3">
                    Manage products and orders from a single place.
                    Use the quick actions below to get started.
                </p>

                <div class="d-flex flex-wrap gap-2">
                    <button class="btn btn-primary" @onclick="NavigateToNewOrder">
                        ➕ New Order
                    </button>
                    <button class="btn btn-outline-primary" @onclick="NavigateToOrders">
                        📦 View Orders
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="NavigateToProducts">
                        🛒 Manage Products
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats + recent orders -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Overview</h5>

                    @if (isLoading)
                    {
                        <p class="text-muted mb-0">Loading overview...</p>
                    }
                    else if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <p class="text-danger mb-0">@errorMessage</p>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            <li class="mb-1">
                                <strong>Total Products:</strong> @totalProducts
                            </li>
                            <li class="mb-1">
                                <strong>Your Orders:</strong> @totalOrders
                            </li>
                            <li class="mb-1">
                                <strong>Last Order:</strong>
                                @if (lastOrderDate.HasValue)
                                {
                                    @lastOrderDate.Value.ToLocalTime().ToString("g")
                                }
                                else
                                {
                                    <span class="text-muted">No orders yet</span>
                                }
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title d-flex justify-content-between align-items-center">
                        <span>Recent Orders</span>
                        <a href="/orders" class="small text-decoration-none">View all</a>
                    </h5>

                    @if (isLoading)
                    {
                        <p class="text-muted">Loading recent orders...</p>
                    }
                    else if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <p class="text-danger">@errorMessage</p>
                    }
                    else if (recentOrders.Count == 0)
                    {
                        <p class="text-muted">You haven't created any orders yet.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order Id</th>
                                        <th>Product Id</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in recentOrders)
                                    {
                                        <tr>
                                            <td>@order.Id</td>
                                            <td>@order.ProductId</td>
                                            <td>@order.Quantity</td>
                                            <td>@order.Total</td>
                                            <td>@order.OrderDate.ToLocalTime().ToString("g")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isLoading = true;
    private string? errorMessage;

    private int totalProducts;
    private int totalOrders;
    private DateTime? lastOrderDate;
    private List<OrderDto> recentOrders = new();

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Load products and orders in parallel
            var productsTask = Api.GetProductsAsync();
            var ordersTask = Api.GetOrdersAsync();

            await Task.WhenAll(productsTask, ordersTask);

            var products = productsTask.Result;
            var orders = ordersTask.Result
                .OrderByDescending(o => o.OrderDate)
                .ToList();

            totalProducts = products.Count;
            totalOrders = orders.Count;
            lastOrderDate = orders.FirstOrDefault()?.OrderDate;

            recentOrders = orders.Take(5).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load dashboard data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    // Navigation helpers
    private void NavigateToNewOrder() => Nav.NavigateTo("/orders/create");
    private void NavigateToOrders() => Nav.NavigateTo("/orders");
    private void NavigateToProducts() => Nav.NavigateTo("/products");
}
