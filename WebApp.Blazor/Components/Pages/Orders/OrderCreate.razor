@page "/orders/create"
@rendermode InteractiveServer
@using WebApp.Blazor.Services
@inject ApiGatewayClient Api
@inject NavigationManager Nav

<h1>Create Order</h1>

@if (isLoading)
{
    <p>Loading products...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p class="text-danger">@errorMessage</p>
}
else
{
    <EditForm Model="model" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Product</label>
            <select class="form-select" @bind="model.ProductId">
                <option value="">-- select product --</option>
                @foreach (var product in products)
                {
                    <option value="@product.Id">@product.Name (@product.Price)</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <InputNumber class="form-control" @bind-Value="model.Quantity" />
        </div>

        <div class="mb-3">
            <label class="form-label">Client Id (GUID)</label>
            <InputText class="form-control" @bind-Value="clientIdText" />
        </div>

        <div class="mb-3">
            <label class="form-label">Order Date</label>
            <InputDate class="form-control" @bind-Value="orderDate" />
        </div>

        <button class="btn btn-primary" type="submit" disabled="@isSaving">
            @(isSaving ? "Saving..." : "Create")
        </button>

        <a class="btn btn-secondary ms-2" href="/orders">Cancel</a>
    </EditForm>
}

@code {
    private List<ProductDto> products = new();
    private CreateOrderRequest model = new()
    {
        Quantity = 1
    };

    private DateTime orderDate = DateTime.Today;
    private bool isLoading = true;
    private bool isSaving;
    private string? errorMessage;
    private string clientIdText = Guid.NewGuid().ToString(); // demo client id

    protected override async Task OnInitializedAsync()
    {
        try
        {
            products = (await Api.GetProductsAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load products: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        errorMessage = null;

        if (!Guid.TryParse(clientIdText, out var clientId))
        {
            errorMessage = "Client Id must be a valid GUID.";
            return;
        }

        if (model.ProductId == Guid.Empty)
        {
            errorMessage = "Please select a product.";
            return;
        }

        model.ClientId = clientId;
        model.OrderDate = orderDate;

        try
        {
            isSaving = true;
            var created = await Api.CreateOrderAsync(model);

            if (created is null)
            {
                errorMessage = "Failed to create order (check ProductId / backend logs).";
                return;
            }

            Nav.NavigateTo("/orders");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating order: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }
}
