@page "/orders"
@rendermode InteractiveServer
@using WebApp.Blazor.Services
@inject ApiGatewayClient Api
@inject NavigationManager Nav

<h1>Orders</h1>

@if (isLoading)
{
    <p>Loading orders...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p class="text-danger">@errorMessage</p>
}
else if (orders.Count == 0)
{
    <p>No orders yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Order Id</th>
            <th>Product Id</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Client Id</th>
            <th>Order Date</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductId</td>
                <td>@order.Quantity</td>
                <td>@order.Total</td>
                <td>@order.ClientId</td>
                <td>@order.OrderDate.ToLocalTime().ToString("g")</td>
                <td>
                    <button class="btn btn-sm btn-primary me-2"
                                @onclick="() => NavigateToEdit(order.Id)">
                        Edit
                    </button>
                    <button class="btn btn-sm btn-danger"
                            @onclick="() => DeleteOrder(order.Id)">
                        Delete
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<a class="btn btn-success" href="/orders/create">Create Order</a>

@code {
    private bool isLoading = true;
    private string? errorMessage;
    private List<OrderDto> orders = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private void NavigateToEdit(Guid id)
        => Nav.NavigateTo($"/orders/edit/{id}");

    private async Task LoadOrders()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            orders = (await Api.GetOrdersAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load orders: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteOrder(Guid id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>(
            "confirm", $"Are you sure you want to delete order {id}?");
        if (!confirmed)
            return;

        try
        {
            var ok = await Api.DeleteOrderAsync(id);
            if (!ok)
            {
                errorMessage = "Failed to delete order.";
                return;
            }

            await LoadOrders();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting order: {ex.Message}";
        }
    }

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
}
