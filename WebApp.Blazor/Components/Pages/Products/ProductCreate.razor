@page "/products/create"
@rendermode InteractiveServer
@using WebApp.Blazor.Services
@inject ApiGatewayClient Api
@inject NavigationManager Nav

<h1>Create Product</h1>

<EditForm Model="model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <InputText class="form-control" @bind-Value="model.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <InputNumber class="form-control" @bind-Value="model.Price" />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="text-danger">@errorMessage</p>
    }

    <button type="submit" class="btn btn-primary" disabled="@isSaving">
        @(isSaving ? "Saving..." : "Create")
    </button>
    <a class="btn btn-secondary ms-2" href="/products">Cancel</a>
</EditForm>

@code {
    private ProductUpsertRequest model = new();
    private bool isSaving;
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        errorMessage = null;

        try
        {
            isSaving = true;
            var created = await Api.CreateProductAsync(model);

            if (created is null)
            {
                errorMessage = "Failed to create product.";
                return;
            }

            Nav.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating product: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }
}
