@page "/"
@page "/login"
@rendermode InteractiveServer

@using System.ComponentModel.DataAnnotations
@using WebApp.Blazor.Services
@inject AuthClient Auth
@inject NavigationManager Nav

<PageTitle>Login</PageTitle>

<div class="container my-4" style="max-width: 500px;">
    <h2>Login</h2>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <EditForm Model="model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Email</label>
            <InputText class="form-control" @bind-Value="model.Email" />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <InputText type="password" class="form-control" @bind-Value="model.Password" />
        </div>

        <button class="btn btn-primary" type="submit" disabled="@isBusy">
            @(isBusy ? "Logging in..." : "Login")
        </button>
    </EditForm>
</div>

@code {
    private LoginModel model = new();
    private bool isBusy;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isBusy = true;

        try
        {
            var ok = await Auth.LoginAsync(model.Email, model.Password);

            if (!ok)
            {
                errorMessage = "Invalid email or password.";
                return;
            }

            Nav.NavigateTo("/dashboard", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Login error: {ex.Message}";
        }
        finally
        {
            isBusy = false;
        }
    }

    private sealed class LoginModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }
}
